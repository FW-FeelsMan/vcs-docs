@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VCS-DOCs</title>
    <link rel="stylesheet" href="~/css/mainStyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/contextMenu.js"></script>
    <script src="/js/sidebar.js"></script>
</head>
<body>

    <div class="background"></div>
    <div class="header-container">
        <div class="header-title">VCS-DOCs</div>
        <p class="menu_divider">Version<br>Control<br>System</p>
    </div>
    <div class="sidebar">
        <div class="sidebar-button" id="button1" onclick="selectButton(this)">
            <img src="~/images/projectsIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Проекты</span>
            <span class="button-number">1</span>
        </div>
        <div class="sidebar-button" id="button3" onclick="selectButton(this)">
            <img src="~/images/personalIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Профиль</span>
            <span class="button-number">2</span>
        </div>
        <div class="sidebar-button" id="button2" onclick="selectButton(this)">
            <img src="~/images/infographicIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Инфографика</span>
            <span class="button-number">3</span>
        </div>

        <div class="sidebar-button" id="button4" onclick="selectButton(this)">
            <img src="~/images/helpIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Обратная связь</span>
            <span class="button-number">4</span>
        </div>
        <!--<form method="post">
         @Html.AntiForgeryToken()
         <button type="submit" asp-page-handler="Logout" class="logout-button">
             <img src="~/images/logout_icon.png" alt="Выход" class="logout-icon">
             Выход
         </button>
        </form>-->
        <form method="post" asp-page-handler="Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="logout-button">
                <img src="~/images/logout_icon.png" alt="Выход" class="logout-icon">
                Выход
            </button>
        </form>
    </div>

    <div id="content" class="content-field">
        <h1>Добро пожаловать!</h1>
        <p>Выберите опцию из боковой панели.</p>
    </div>
    <div class="context-menu">
        <ul>
            <li>Открыть</li>
            <li>Вырезать</li>
            <li>Печать</li>
            <li>Настройки</li>
            <li>Выход</li>
        </ul>
    </div>
    <script src="/js/StatusOnlineController.js"></script>
</body>
</html>