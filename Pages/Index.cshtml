@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VCS-DOCs</title>
    <link rel="stylesheet" href="~/css/mainStyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/contextMenu.js"></script>
    <script src="/js/sidebar.js"></script>
</head>
<body>

    <div class="background"></div>
    <div class="header-container">
        <div class="header-title">VCS-DOCs</div>
        <p class="menu_divider">Version<br>Control<br>System</p>
    </div>
    <div class="sidebar">
        <div class="sidebar-button" data-content="content_projects" data-style="projectsStyle" id="button1" onclick="selectButton(this)">
            <img src="~/images/projectsIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Проекты</span>
            <span class="button-number">1</span>
        </div>
        <div class="sidebar-button" data-content="profile_page" data-style="profileStyle" id="button2" onclick="selectButton(this)">
            <img src="~/images/personalIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Профиль</span>
            <span class="button-number">2</span>
        </div>
        <div class="sidebar-button" data-content="infographics_page" data-style="infographicsStyle" id="button3" onclick="selectButton(this)">
            <img src="~/images/infographicIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Инфографика</span>
            <span class="button-number">3</span>
        </div>
        <div class="sidebar-button" data-content="contact_page" data-style="contactStyle" id="button4" onclick="selectButton(this)">
            <img src="~/images/helpIcon.png" alt="Icon" class="button-icon">
            <span class="button-text">Обратная связь</span>
            <span class="button-number">4</span>
        </div>
        <div class="sidebar-button" data-content="extra_page" data-style="extraStyle" id="button5" onclick="selectButton(this)">
            <img src="~/images/extra.png" alt="Icon" class="button-icon">
            <span class="button-text">Дополнения</span>
            <span class="button-number">5</span>
        </div>

        <div class="logout-container">
            <form method="post" asp-page-handler="Logout" class="logout-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-button">
                    <img src="~/images/logout_icon.png" alt="Выход" class="logout-icon">
                    Выход
                </button>
            </form>
        </div>

    </div>

    <div id="content" class="content-field">
        <!--Сюда грузим контент который выбран в сайдбаре-->
    </div>
    <div class="context-menu">
        <ul>
            <li>Открыть</li>
            <li>Вырезать</li>
            <li>Печать</li>
            <li>Настройки</li>
            <li>Выход</li>
        </ul>
    </div>
    <script src="/js/StatusOnlineController.js"></script>
</body>
</html>